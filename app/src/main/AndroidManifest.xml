            android:value="1280" />

        <activity android:name=".view.activity.main.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.login.LoginActivity" >
            <!--<intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>-->
            </activity>
        <activity android:name=".view.activity.login.RegisterActivity" />
        <activity android:name=".view.activity.follow.MyFollowActivity"/>
        <activity android:name=".view.activity.follow.HotFollowActivity"></activity>
    </application>

</manifest>