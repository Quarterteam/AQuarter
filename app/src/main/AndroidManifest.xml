<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a.quarter">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_LOCATION_EXTRA_COMMANDS" />

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"

        android:theme="@style/Theme.Main">
        <!-- autolayout指定设计稿尺寸 -->
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity android:name=".view.activity.main.MainActivity">
        </activity>
        <activity
            android:name=".view.activity.login.NativeLoginActivity"
            android:theme="@style/Theme.FullScreen"
            android:launchMode="singleTask"/>
        <activity
            android:name=".view.activity.login.NativeRegisterActivity"
            android:theme="@style/Theme.FullScreen" />
        <activity android:name=".view.activity.main.MyFollowActivity" />
        <activity android:name=".view.activity.main.HotFollowActivity" />
        <activity android:name=".view.activity.main.PublishArticleActivity" />
        <activity android:name=".view.adapter.video.VHotFragDetails"/>
        <activity
            android:name=".view.activity.welcome.WelcomeActivity"
            android:theme="@style/Theme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.main.SearchFriendActivity" />
        <activity android:name=".view.activity.login.ThirdPartyLoginActivity"
            android:theme="@style/Theme.FullScreen"></activity>

        <activity android:name=".view.activity.UserPageActivity"></activity>
        <activity android:name=".view.activity.MsgInformActivity"></activity>
        <activity android:name=".view.activity.MyCollectActivity"></activity>

        <activity android:name=".view.activity.main.CreationActivity"/>

        <activity android:name=".view.activity.configure.SlidingmenuToActivity"></activity>
        <activity android:name=".view.activity.main.VideoActivity"></activity>
        <!--QQ登录分享配置-->
        <activity
            android:name="com.umeng.qq.tencent.AuthActivity"
            android:launchMode="singleTask"
            android:noHistory="true" >
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="tencent1106087531" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.umeng.qq.tencent.AssistActivity"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Translucent.NoTitleBar"
            android:configChanges="orientation|keyboardHidden|screenSize"/>
        <!--配置友盟的Appkey-->
        <meta-data
            android:name="UMENG_APPKEY"
            android:value="591559b482b635604b0005af"
            >
        </meta-data>

        <activity
            android:name=".view.activity.login.FindPwdActivity"
            android:theme="@style/Theme.FullScreen" />
        <activity
            android:name=".view.activity.login.ChangePwdActivity"
            android:theme="@style/Theme.FullScreen"></activity>
    </application>

</manifest>