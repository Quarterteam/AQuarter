<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.a.quarter">

    <uses-permission android:name="android.permission.INTERNET"></uses-permission>
   <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"></uses-permission>
   <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"></uses-permission>

    <application
        android:name=".app.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/Theme.Main">

        <!-- autolayout指定设计稿尺寸 -->
        <meta-data
            android:name="design_width"
            android:value="720" />
        <meta-data
            android:name="design_height"
            android:value="1280" />

        <activity android:name=".view.activity.main.MainActivity">
        </activity>
        <activity android:name=".view.activity.login.NativeLoginActivity"
            android:theme="@style/Theme.FullScreen"/>
        <activity android:name=".view.activity.login.NativeRegisterActivity"
            android:theme="@style/Theme.FullScreen"/>
        <activity android:name=".view.activity.main.MyFollowActivity" />
        <activity android:name=".view.activity.main.HotFollowActivity" />
        <activity android:name=".view.activity.main.PublishArticleActivity" />
        <activity android:name=".view.adapter.video.VHotFragDetails"/>
        <activity
            android:name=".view.activity.welcome.WelcomeActivity"
            android:theme="@style/Theme.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".view.activity.main.SearchFriendActivity" />
        <activity android:name=".view.activity.login.ThirdPartyLoginActivity"
            android:theme="@style/Theme.FullScreen"></activity>
<!--设置页面-->
        <activity android:name=".view.activity.configure.SlidingmenuToActivity"></activity>
    </application>

</manifest>