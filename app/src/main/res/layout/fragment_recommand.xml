<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.TabLayout
        android:id="@+id/recommand_frgament_tablayout"
        style="@style/tablayout_recommand_frgament"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/blue"
        app:tabTextAppearance="@style/tablayout_recommand_frgament2"
        app:tabTextColor="@color/black">

    </android.support.design.widget.TabLayout>

    <FrameLayout
        android:id="@+id/recommad_framlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/recommand_frgament_tablayout"></FrameLayout>


</RelativeLayout>
