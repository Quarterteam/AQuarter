<?xml version="1.0" encoding="utf-8"?>
<RadioGroup
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/radioGroupNav"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="0dp"
    android:orientation="horizontal">

    <RadioButton
        android:id="@+id/radioButtonRecommend"
        style="@style/RadioButton.MainNav"
        android:drawableTop="@drawable/selector_icon_main_nav_recommend"
        android:text="推荐" />

    <RadioButton
        android:id="@+id/radioButtonJoke"
        style="@style/RadioButton.MainNav"
        android:drawableTop="@drawable/selector_icon_main_nav_joke"
        android:text="段子" />

    <RadioButton
        android:id="@+id/radioButtonVideo"
        style="@style/RadioButton.MainNav"
        android:drawableTop="@drawable/selector_icon_main_nav_video"
        android:text="视频"/>

</RadioGroup>