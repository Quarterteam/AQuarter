<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.a.quarter.view.activity.main.PublishArticleActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_head_height"
        android:background="@color/mainColor"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@drawable/selector_textcolor_white_mainadd"
            android:textSize="@dimen/textsize_medium"
            android:gravity="center"
            android:text="取消"/>

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_main_title"
            android:layout_weight="1"
            android:gravity="center"
            android:text="发表文章"/>

        <TextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textColor="@drawable/selector_textcolor_white_mainadd"
            android:textSize="@dimen/textsize_medium"
            android:gravity="center"
            android:text="发表"/>
    </LinearLayout>

    <EditText
        android:id="@+id/et_input"
        android:layout_below="@id/ll"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:padding="10dp"
        android:textSize="@dimen/textsize_main_nav"
        android:textColorHint="@color/gray"
        android:textColor="@color/black"
        android:gravity="top"
        android:background="@null"
        android:hint="请输入内容，禁止输入色情，暴力等违反国家法律的内容，违者将以封号处理!"/>

    <!--<GridView
        android:id="@+id/gv"
        android:layout_below="@id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numColumns="3"/>-->

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv"
        android:layout_below="@id/et_input"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>
