<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include
        android:id="@+id/inc_info_head"
        layout="@layout/include_head_iv_tv_iv"/>

<android.support.design.widget.TabLayout
    android:id="@+id/msg_table"
    android:layout_below="@id/inc_info_head"
    android:layout_centerHorizontal="true"
    app:tabIndicatorColor="@color/blue"
    app:tabSelectedTextColor="@color/blue"
    android:layout_width="wrap_content"
    android:layout_height="30dp"></android.support.design.widget.TabLayout>
    <ImageView
        android:id="@+id/msg_image_del"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_below="@id/inc_info_head"
        android:layout_alignParentRight="true"
        android:background="@mipmap/del"
        android:layout_marginTop="5dp"
        />
    <TextView
        android:layout_toLeftOf="@id/msg_image_del"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/msg_image_del"
        android:text="清空消息"
        android:textSize="12dp"
        />
    <View
        android:id="@+id/msg_info"
        android:layout_below="@id/msg_table"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginTop="5dp"
        android:background="@color/grayAdd"></View>
<FrameLayout
    android:id="@+id/msg_frame"
    android:layout_below="@id/msg_info"
    android:layout_width="match_parent"
    android:layout_height="match_parent"></FrameLayout>
</RelativeLayout>