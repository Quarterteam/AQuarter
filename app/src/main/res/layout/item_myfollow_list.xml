<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/myfollow_list_item_height"
    android:background="@drawable/selector_bg_white_graytranslucent">

    <!--<com.exa.framelib_rrm.base.view.view.CircleImageView-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_icon"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_margin="@dimen/myfollow_list_item_widget_margin"
        app:actualImageResource="@mipmap/bg10"
        app:roundAsCircle="true"/>

    <ImageView
        android:id="@+id/iv_arrow_right"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_margin="@dimen/myfollow_list_item_widget_margin"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:src="@mipmap/arrow_right"/>

    <TextView
        android:id="@+id/tv_time"
        android:layout_toLeftOf="@id/iv_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/textsize_small"
        android:layout_marginTop="@dimen/myfollow_list_item_widget_margin"
        android:layout_marginLeft="@dimen/myfollow_list_item_widget_margin"
        android:text="2017-07-05 11:52"/>

    <TextView
        android:id="@+id/tv_name"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_toLeftOf="@id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/myfollow_list_item_widget_margin"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/black"
        android:singleLine="true"
        android:maxLines="1"
        android:ellipsize="end"
        android:text="阿诺马斯丁"/>

    <TextView
        android:id="@+id/tv_info"
        android:layout_toRightOf="@id/iv_icon"
        android:layout_toLeftOf="@id/iv_arrow_right"
        android:layout_below="@id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="@dimen/textsize_small"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="@dimen/myfollow_list_item_widget_margin"
        android:ellipsize="end"
        android:text="吃货们快戳我"/>

</RelativeLayout>