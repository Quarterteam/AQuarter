<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="@color/lightgray"
    tools:context="com.a.quarter.view.activity.compile.PublishVideoActivity">

    <ImageView
        android:id="@+id/iv_video_thumb"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher"/>

    <LinearLayout
        android:layout_width="120dp"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@mipmap/bg12"
            android:scaleType="centerCrop"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_large"
            android:background="@color/mainColor"
            android:gravity="center"
            android:padding="5dp"
            android:text="设置封面"/>

    </LinearLayout>

    <include
        layout="@layout/include_head_tv_tv_tv_camera"/>

    <TextView
        android:id="@+id/tv_publish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:background="@drawable/selector_bg_maincolor_graytranslucent"
        android:gravity="center"
        android:padding="10dp"
        android:text="发布"
        android:textColor="@color/white"
        android:textSize="@dimen/textsize_medium" />

    <EditText
        android:id="@+id/et_video_introduction"
        android:layout_below="@id/iv_video_thumb"
        android:layout_above="@id/tv_publish"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/textsize_medium"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="left|top"
        android:padding="8dp"
        android:background="#A2DEFA"
        android:hint="点击输入视频简介.."/>

</RelativeLayout>
