<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:padding="10dp">

    <!--<com.exa.framelib_rrm.base.view.view.CircleImageView
        android:id="@+id/iv_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/ic_launcher"/>-->
    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/iv_user_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        fresco:roundAsCircle="true"
        fresco:actualImageResource="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/tv_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/red"
        android:layout_marginLeft="10dp"
        android:textSize="@dimen/textsize_medium"
        android:layout_toRightOf="@id/iv_user_icon"
        android:layout_alignTop="@id/iv_user_icon"
        android:text="用户名" />

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/dimgrey"
        android:textSize="@dimen/textsize_small"
        android:layout_alignBottom="@id/iv_user_icon"
        android:layout_toRightOf="@id/iv_user_icon"
        android:layout_marginLeft="10dp"
        android:text="时间" />

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dimgrey"
        android:textSize="@dimen/textsize_medium"
        android:layout_below="@id/iv_user_icon"
        android:layout_marginTop="10dp"
        android:text="天气美美的，适合郊游" />

    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        layout="@layout/include_funcs"/>

    <ImageView
        android:id="@+id/iv_show"
        android:layout_alignParentRight="true"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@mipmap/show" />

    <!--<com.a.quarter.view.media.IjkVideoView-->
    <!--<com.dl7.player.media.IjkPlayerView-->
    <!--<View-->
    <!--<media.IjkVideoView-->
<!--    <com.a.quarter.view.fragment.recommend.MyIjkVideoView
        android:layout_marginTop="5dp"
        android:id="@+id/ijkVideoView"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:layout_below="@id/tv_content"
        android:background="@color/gray"/>-->

    <FrameLayout
        android:id="@+id/fl_video_container"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_content"
        android:layout_width="match_parent"
        android:layout_height="230dp">

        <!--<ImageView-->
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/iv_video_thumb"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:id="@+id/iv_video_start_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:src="@mipmap/video_icon"/>

    </FrameLayout>

    <include
        android:layout_width="wrap_content"
        android:layout_height="230dp"
        android:layout_marginTop="5dp"
        android:layout_below="@id/tv_content"
        android:layout_alignParentRight="true"
        layout="@layout/include_heart_star"/>

    <TextView
        android:id="@+id/tv_name1"
        android:layout_below="@id/fl_video_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize_small"
        android:text="用户名："/>

    <TextView
        android:id="@+id/tv_comment1"
        android:layout_below="@id/fl_video_container"
        android:layout_toRightOf="@id/tv_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/dimgrey"
        android:textSize="@dimen/textsize_small"
        android:text="不错"/>

    <TextView
        android:id="@+id/tv_name2"
        android:layout_below="@id/tv_comment1"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/mainColor"
        android:textSize="@dimen/textsize_small"
        android:text="用户名："/>

    <TextView
        android:id="@+id/tv_comment2"
        android:layout_below="@id/tv_comment1"
        android:layout_toRightOf="@id/tv_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textColor="@color/dimgrey"
        android:textSize="@dimen/textsize_small"
        android:text="不错"/>

    <TextView
        android:id="@+id/tv_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/fl_video_container"
        android:rotation="45"
        android:transformPivotY="15dp"
        android:transformPivotX="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="-10dp"
        android:textColor="@color/gray"
        android:textSize="18sp"
        android:text="神评！"/>

</RelativeLayout>
