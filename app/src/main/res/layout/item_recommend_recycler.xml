<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="match_parent">

    <com.exa.framelib_rrm.base.view.view.CircleImageView
        android:id="@+id/re_iamge_item"
        style="@style/Fram.Recommend.Item.Image"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/re_textNickName_item"
        style="@style/Fram.Recommend.Item.Nickname"
        android:text="hello" />

    <TextView
        android:id="@+id/re_textTime_item"
        style="@style/Fram.Recommend.Item.Time"
        android:text="hello" />

    <TextView
        android:id="@+id/re_textTime_content"
        style="@style/Fram.Recommend.Item.Content"
        android:text="helloffffdedafafaffffffffffffffff3ewaeaa"
        android:layout_below="@id/re_iamge_item"
        />


    <include
        style="@style/RadioButton.add"
        android:id="@+id/include_re_btn"
        layout="@layout/include_re_btn"
       ></include>

    <com.a.quarter.view.media.IjkVideoView
        android:layout_marginTop="20dp"
        android:id="@+id/re_player_item"
        style="@style/Fram.Recommend.Item.player"></com.a.quarter.view.media.IjkVideoView>

    <android.support.v7.widget.RecyclerView
       style="@style/re.recycler"
        android:id="@+id/re_hot_recycler"

        ></android.support.v7.widget.RecyclerView>
</RelativeLayout>
