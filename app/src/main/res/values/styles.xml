<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation.Main" parent="@android:style/Animation">
        <item name="android:activityOpenExitAnimation">@anim/activity_left_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="Theme.Main" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Main</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/mainColor</item>
        <item name="colorControlHighlight">@color/mainColor</item>
        <item name="colorControlActivated">@color/mainAdd</item>
    </style>

    <style name="Theme.FullScreen" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Control" ></style>
    <style name="RadioButton.MainNav" parent="Control">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_bg_white_graytranslucent</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_main_nav</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_nav</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="TextView.MainSlide.Item.Type1" parent="Control">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <!--<item name="android:background">@drawable/selector_bg_white_gray</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_slide</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawableRight">@mipmap/arrow_right_small</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextView.MainSlide.Item.Type2" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/selector_bg_white_gray</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_small</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_slide</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="TextView.Tablayout.Text1" parent="AppTheme">
        <item name="android:background">@color/white</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentLeft">true</item>


    </style>

    <style name="TextView.Tablayout.Text" parent="AppTheme">
        <item name="android:textSize">20dp</item>

    </style>

    <style name="Style.Linearlayout.Type" parent="AppTheme">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@id/recommand_fragment_viewpager</item>
    </style>

    <style name="Fram.Recommend.Type" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_below">@id/recommand_frgament_tablayout</item>
    </style>

    <style name="Fram.Recommend.Item.Image" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:src">@mipmap/ic_launcher</item>
    </style>

    <style name="Fram.Recommend.Item.Nickname" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/frag_recommend_item_nickname</item>
        <item name="android:layout_toRightOf">@id/re_iamge_item</item>
        <item name="android:layout_alignTop">@id/re_iamge_item</item>

    </style>

    <style name="Fram.Recommend.Item.Time" parent="AppTheme">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/frag_recommend_item_time</item>
        <item name="android:layout_below">@id/re_textNickName_item</item>
        <item name="android:layout_toRightOf">@id/re_iamge_item</item>


    </style>

    <style name="Fram.Recommend.Item.player" parent="AppTheme">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/frag_recommend_item_player</item>
        <item name="android:layout_below">@id/re_iamge_item</item>
        <item name="android:layout_marginTop">@dimen/frag_recommend_tab_indicate</item>
        <item name="android:layout_marginBottom">@dimen/frag_recommend_item_distance</item>


    </style>


    <style name="EditText.Login" parent="Control">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:textSize">@dimen/textsize_main_slide</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:drawablePadding">10dp</item>
        <!--<item name="android:background">@null</item>-->
    </style>

    <style name="Button.Login" parent="Control">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <!--<item name="android:textColor">@drawable/selector_login_btn_textcolor</item>-->
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/textsize_main_slide</item>
        <item name="android:background">@drawable/selector_bg_maincolor_graytranslucent</item>
    </style>

    <style name="TextView.FindPwd" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_slide</item>
        <item name="android:textSize">@dimen/textsize_main_nav</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="RadioButton.Re" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:text">helo</item>

        <item name="android:button">@null</item>

        <item name="android:drawableTop">@mipmap/ic_launcher</item>
    </style>

    <style name="RadioButton.Re02" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:drawableTop">@mipmap/ic_launcher</item>
    </style>


    <style name="RadioButton.add" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
    </style>





</resources>
