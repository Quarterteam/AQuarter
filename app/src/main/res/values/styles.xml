<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation.Main" parent="@android:style/Animation">
        <item name="android:activityOpenExitAnimation">@anim/activity_left_out</item>
        <item name="android:activityOpenEnterAnimation">@anim/activity_right_in</item>
        <item name="android:activityCloseEnterAnimation">@anim/activity_left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/activity_right_out</item>
    </style>

    <style name="Theme.Main" parent="AppTheme">
        <item name="android:windowAnimationStyle">@style/Animation.Main</item>
        <item name="android:windowNoTitle">true</item>
        <item name="colorControlNormal">@color/mainColor</item>
        <item name="colorControlHighlight">@color/mainColor</item>
        <item name="colorControlActivated">@color/mainAdd</item>
    </style>

    <style name="Control" ></style>
    <style name="RadioButton.MainNav" parent="Control">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/selector_bg_white_gray</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/textsize_main_nav</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_nav</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawablePadding">5dp</item>
    </style>

    <style name="TextView.MainSlide.Item.Type1" parent="Control">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <!--<item name="android:background">@drawable/selector_bg_white_gray</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_main_slide</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_slide</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">30dp</item>
        <item name="android:drawablePadding">10dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:drawableRight">@mipmap/arrow_right_small</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="TextView.MainSlide.Item.Type2" parent="Control">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/selector_bg_white_gray</item>-->
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">@dimen/textsize_main_slide</item>
        <item name="android:textColor">@drawable/selector_textcolor_main_slide</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:clickable">true</item>
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:layout_marginRight">30dp</item>
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>


    <style name="tablayout_recommand_frgament" parent="AppTheme">
        <item name="android:background">@color/white</item>
    </style>
    <style name="tablayout_recommand_frgament2" parent="AppTheme">
        <item name="android:textSize">22sp</item>
    </style>
    <style name="tablayout_recommand_frgament3" parent="AppTheme">
        <item name="android:textColor">@color/colorAccent</item>
    </style>
    <style name="linearlayout_recommand_fragment" parent="AppTheme">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:orientation">horizontal</item>
    </style>

</resources>
