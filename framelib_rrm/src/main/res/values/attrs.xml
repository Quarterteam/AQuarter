<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>

    <declare-styleable name="PasswordEditText">
        <attr name="pet_iconShow" format="integer"/>
        <attr name="pet_iconHide" format="integer"/>
    </declare-styleable>

    <!--自定义ImageView的宽高比 -->
    <declare-styleable name="WHImageView">
        <attr name="w_d_h" format="string"/>
    </declare-styleable>


    <!--SVG图片和动画-->
    <declare-styleable name="PathView">
        <attr name="pathColor" format="color|reference"/>
        <attr name="pathWidth" format="dimension|reference"/>
        <attr name="svg" format="reference"/>
        <attr name="fill" format="boolean"/>
        <attr name="fillColor" format="color|reference"/>
        <attr name="naturalColors" format="boolean"/>
    </declare-styleable>

    <!--RoundedImageView-->
    <declare-styleable name="RoundedImageView">
        <attr name="riv_corner_radius" format="dimension" />
        <attr name="riv_corner_radius_top_left" format="dimension" />
        <attr name="riv_corner_radius_top_right" format="dimension" />
        <attr name="riv_corner_radius_bottom_left" format="dimension" />
        <attr name="riv_corner_radius_bottom_right" format="dimension" />
        <attr name="riv_border_width" format="dimension" />
        <attr name="riv_border_color" format="color" />
        <attr name="riv_mutate_background" format="boolean" />
        <attr name="riv_oval" format="boolean" />
        <attr name="android:scaleType" />
        <attr name="riv_tile_mode">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_x">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
        <attr name="riv_tile_mode_y">
            <enum name="clamp" value="0" />
            <enum name="repeat" value="1" />
            <enum name="mirror" value="2" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SwitchButton">
        <attr name="swbtn_shadow_radius" format="reference|dimension"/>
        <attr name="swbtn_shadow_offset" format="reference|dimension"/>
        <attr name="swbtn_shadow_color" format="reference|color"/>
        <attr name="swbtn_uncheck_color" format="reference|color"/>
        <attr name="swbtn_checked_color" format="reference|color"/>

        <attr name="swbtn_border_width" format="reference|dimension"/>
        <attr name="swbtn_checkline_color" format="reference|color"/>
        <attr name="swbtn_checkline_width" format="reference|dimension"/>
        <attr name="swbtn_uncheckcircle_color" format="reference|color"/>
        <attr name="swbtn_uncheckcircle_width" format="reference|dimension"/>
        <attr name="swbtn_uncheckcircle_radius" format="reference|dimension"/>

        <attr name="swbtn_checked" format="reference|boolean"/>
        <attr name="swbtn_shadow_effect" format="reference|boolean"/>
        <attr name="swbtn_effect_duration" format="reference|integer"/>
        <attr name="swbtn_button_color" format="reference|color"/>
        <attr name="swbtn_show_indicator" format="reference|boolean"/>
        <attr name="swbtn_background" format="reference|color"/>
        <attr name="swbtn_enable_effect" format="reference|boolean"/>
    </declare-styleable>

</resources>